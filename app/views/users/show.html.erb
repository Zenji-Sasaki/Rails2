<h1 class="title">プロフィール</h1>

<table class="general-box">
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <th>パスワード</th>
    <td>**********</td>
  </tr>
</table>

<%= link_to "編集", edit_user_registration_path, class: "btn btn-primary roombtn" %>

<%= form_with model: @user do |f| %>
    <table class="general-box">
      <tr>

        <th><%= f.label :icon , "アイコン画像" %></th>
        <td>
        <% if @user.icon.present? %>
        <%= image_tag @user.icon.url %><br>
        <% end %>
        <%= f.file_field :icon %></td>
      </tr>
  
      <tr>
        <th><%= f.label :name , "名前" %></th>
        <td><%= f.text_field :name, style: "width:100%" %></td>
      </tr>
  
      <tr>
        <th><%= f.label :profile , "自己紹介" %></th>
        <td><%= f.text_area :profile, style: "width:100%" %></td>
      </tr>
  </table>
  
  <%= f.submit "更新", class: "btn btn-primary roombtn" %>
<% end %>

<%= link_to "ホーム画面に戻る", root_path, style: "margin:3%" %>